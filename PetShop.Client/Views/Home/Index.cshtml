@model IEnumerable<PetShop.data.Models.Animal>
@{
    ViewData["Title"] = "Home Page";
}
<link href='https://fonts.googleapis.com/css?family=Allan' rel='stylesheet' />

<div class="text-center">
    <h3 class="display-4" style="font-family:cursive;color:lightgreen">Welcome To The Pet Shop</h3>
</div>
<div class="text-center">
    <h6 class="display-6" style="font-family:Allan;color:gold">Our Pets Are The Best and Finest!</h6>
</div>


<ul>
   <li> <div><a asp-controller="Animals" asp-action="Index">Go To Catalog <i class='fas fa-book-reader' style="color:green"></i></a></div></li>
    <li><div><a asp-controller="Admin" asp-action="Index">Edit Page(For Admins Only!) <i class='fas fa-key' style="color:black"></i></a></div></li>
</ul>

 <div><h4>Most Popular Pets</h4></div>
   <div>
   <table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
             <th>
                @Html.DisplayNameFor(model => model.PhotoUrl)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Category)
            </th>
             <th>
               No. Of Comments
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <img src="/Photos/@item.Category.Name/@item.PhotoUrl" height="50"/>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Category.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comments.Count)
            </td>

            <td>
                <a asp-controller="Animals" asp-action="Details" asp-route-id="@item.AnimalId">Details <span class='bi bi-info-circle-fill'></span></a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
