@model PetShop.Client.Models.AddCommentModel
@*@model PetShop.data.Models.Animal*@


@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Pet</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Animal.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Animal.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Animal.BirthDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Animal.BirthDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Animal.Description)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Animal.Description)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Animal.PhotoUrl)
        </dt>
        <dd class = "col-sm-10">
            <img src="/Photos/@Model.Animal.Category.Name/@Model.Animal.PhotoUrl" height="300" width="400"/>
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Animal.Category)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Animal.Category.Name)
        </dd>
         <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Animal.Comments)
        </dt>
        <dd class = "col-sm-10">
            @foreach (var item in Model.Animal.Comments)
            {
                <ul>
                 <li><div style="font-family:cursive">@item.Content</div></li>
                </ul>
            }
        </dd>
        <form asp-controller="Animals" asp-action="Details" asp-for-id=@Model.Animal.AnimalId enctype="multipart/form-data" method="post">
            
         <dt class = "col-sm-2">
            Add Your Comment
         </dt>
         <dd class = "col-sm-10">
            <div>
            <input asp-for=Content/>
            <button type="submit">Add Comment</button>
            </div>
        </dd>
        </form>

    </dl>
</div>
<div>
    <a asp-action="Index">Back to Catalog <i class='fas fa-book-reader' style="color:green"></i></a>
</div>
